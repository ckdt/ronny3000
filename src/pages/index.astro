  <style>
    :root {
      --brand--primary: #151718;
      --brand--secondary: #f2f2f0;
      --brand--alt: #808277;
      --body: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo, Consolas,
        "DejaVu Sans Mono", monospace;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --brand--primary: #808277;
        --brand--secondary: #151718;
        --brand--alt: #f2f2f0;
        --body: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo,
