      z-index: 1;

      flex-flow: column;
      align-items: center;
      width: 100%;
      padding: 4rem;
      display: flex;
      position: relative;
    }
    .circle {
      position: fixed;
      z-index: 2;
      top: -64px;
      left: -64px;
      pointer-events: none;
    }

    .hero-logo {
      width: 100%;
      position: relative;
      overflow: hidden;
    }
    .logo-img-placeholder {
      opacity: 0;
    }

    .logo-img {
      position: absolute;
      top: 0%;
      bottom: 0%;
      left: 0%;
      right: 0%;
    }

    img {
      object-fit: cover;
      width: 100%;
      max-width: 100%;
      height: 100%;
      display: inline-block;
    }
  </style>

  <script>
    //@ts-nocheck
    import { gsap } from "gsap";

    let loadTl = gsap.timeline({
      onStart: function () {
        document.body.style.cursor = "progress";
        setTimeout(function () {
          document.body.style.cursor = "auto";
        }, 1000);
      },
    });

    loadTl.from(
      ".logo-img",
      {
        y: "100%",
        duration: 1.4,
        stagger: { each: 0.04 },
        ease: "expo.inOut",
      },
      0
    );

    const circle = document.querySelector(".circle");
    const box = document.querySelector(".hero-logo");

    gsap.set(circle, {
      xPercent: 64,
      yPercent: 64,
    });

    box.addEventListener("mousemove", moveCircle);
    box.addEventListener("mouseleave", resetCircle);

    function moveCircle(e) {
      gsap.to(circle, 0.3, {
        x: e.clientX,
        y: e.clientY,
      });
    }

    function resetCircle(e) {
      gsap.to(circle, 0.3, {
        x: -64,
        y: -64,
      });
    }
  </script>
