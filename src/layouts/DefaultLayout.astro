---
import "../styles/global.scss";

interface Props {
  title: string;
}

const { title = "Title - by AstroBuildClub" } = Astro.props;
---

<html lang="nl">
  <head>
    <meta charset="utf-8" />

    <!-- Favicon Goodness -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#ff6255" />
    <meta name="msapplication-TileColor" content="#dcdfdb" />
    <meta name="theme-color" content="#ffffff" />
    <!-- / Favicon Goodness -->

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Ronny Digital specializes in exceptional digital design, UX, UI, and branding solutions. Transform your vision into engaging experiences that resonate with your audience. Explore our creative services today!"
    />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
